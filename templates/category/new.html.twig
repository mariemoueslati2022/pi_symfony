{% extends "base.html.twig" %}

{% block body %}

	
			<!-- Content Header (Page header) -->
			<section class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-6">
							<h1>Ajouter categorie</h1>
						</div>
						<div class="col-sm-6">
							<ol class="breadcrumb float-sm-right">
								<li class="breadcrumb-item">
									<a href="#">Admin</a>
								</li>
								<li class="breadcrumb-item active">categorie > add</li>
							</ol>
						</div>
					</div>
				</div>
				<!-- /.container-fluid -->
			</section>

			<!-- Main content -->
			<section class="content">
				<div class="container-fluid">
					<div
						class="row">
						<!-- left column -->
						<div
							class="col-md-12">
							<!-- jquery validation -->
							<div class="card card-primary">
								<div class="card-header">
									<h3 class="card-title">Table categorie</h3>
								</div>
								<!-- /.card-header -->
								<!-- form start -->
								{{ form_start(form , {"attr":{
                "onsubmit":"return check()"
              }})  }}{{ form_row(form._token) }}
								<div class="card-body">
									<div class="form-group">
										<label for="exampleInputEmail1">label</label>
										{{form_widget(form.label, {"attr":{ " class " : "form-control" }}) }}
									</div>
								
								<!-- /.card-body -->
								<div class="card-footer">
									<button type="submit" class="btn btn-primary">Submit</button>
								</div>
								{{ form_end(form) }}
							</div>
							<!-- /.card -->
						</div>
						<!--/.col (left) -->
						<!-- right column -->
						<div class="col-md-6"></div>
						<!--/.col (right) -->
					</div>
					<!-- /.row -->
				</div>
				<!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

	<script>

		function check() {

var categorie = document.getElementById("category_form_label").value;

var a = true;
var nameRegex = /^[a-zA-Z]+$/;
if (! categorie.match(nameRegex)) {
toastr.error("Categorie label must contain only alphabetical characters");
a = false;
}



return a;
}
	</script>
{% endblock %}
